<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nihaa_000.chaiwalla">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".TypesOfTea"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Inputandoutput"
            android:label="@string/title_activity_inputandoutput"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".CheckedBoxPassed"
            android:label="@string/title_activity_checked_box_passed"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize|adjustPan" />
        <activity
            android:name=".InputTea"
            android:label="@string/title_activity_input_tea"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ExpenseList"
            android:label="@string/title_activity_expense_list"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>